<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:padding="15dp">

        <ImageView
            android:id="@+id/img_contact"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/name_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/img_contact"
            android:layout_toRightOf="@+id/img_contact"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_contact"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/img_contact"
            android:layout_toRightOf="@+id/img_contact"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/course_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/credit"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/img_contact"
            android:layout_toRightOf="@+id/img_contact"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/detail_proposal"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_contact"
            android:layout_marginStart="172dp"
            android:layout_marginLeft="172dp"
            android:layout_marginTop="28dp"
            android:layout_toEndOf="@+id/img_contact"
            android:layout_toRightOf="@+id/img_contact"
            android:textColor="@color/blue" />
    </RelativeLayout>

</LinearLayout>